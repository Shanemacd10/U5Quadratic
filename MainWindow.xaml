<Window x:Class="U5Quadratic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:U5Quadratic"
        mc:Ignorable="d"
        Title="Quadratic Calculator" MaxHeight="500" MaxWidth="650" MinHeight="500" MinWidth="650">

    <Canvas x:Name="canvas">
        <TextBox x:Name="txtA" Text="a" Canvas.Left="10" Canvas.Top="16" Width="30" RenderTransformOrigin="1.048,0.594" />
        <TextBox x:Name="txtB" Text="b" Canvas.Left="45" Canvas.Top="16" Height="18" Width="30" />
        <TextBox x:Name="txtC" Text="c" Canvas.Left="80" Canvas.Top="16" Width="33" RenderTransformOrigin="-0.803,0.656" />
        <Button x:Name="btnRun" Content="Calculate" Click="btnRun_Click" Canvas.Left="10" Canvas.Top="39" Width="103" />
        <Label x:Name="lblOutput" Content="" Canvas.Left="10" Canvas.Top="64" Width="103" />
    </Canvas>
</Window>
